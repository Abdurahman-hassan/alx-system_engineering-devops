global
    log     127.0.0.1 local0 notice
    maxconn 2000
    user    haproxy
    group   haproxy

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option  redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000

# Frontend for HTTP traffic, redirecting to HTTPS
frontend http-in
    bind *:80
    mode http
    redirect scheme https code 301 if !{ ssl_fc }

# Frontend for HTTPS traffic
frontend https-in
    bind *:443 ssl crt /etc/letsencrypt/live/greencoder.tech/fullchain.pem privkey /etc/letsencrypt/live/greencoder.tech/privkey.pem
    mode http
    default_backend web-servers

# Backend definition
backend web-servers
    balance roundrobin
    option  httpclose
    option  forwardfor
    server  500280-web-01 18.206.207.101:80 check
    server  500280-web-02 54.174.244.164:80 check
